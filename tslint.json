{
  "extends": [
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    "no-namespace": [true, "allow-declarations"],
    "no-reference": true,
    "only-arrow-functions": [true, "allow-declarations"],
    "typedef-whitespace": [true,
      {"variable-declaration": "nospace", "call-signature": "nospace", "parameter": "nospace", "property-declaration": "nospace"},
      {"variable-declaration": "onespace", "call-signature": "onespace", "parameter": "onespace", "property-declaration": "onespace"}
    ],
    "curly": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [true, "log", "error"],
    "no-debugger": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-shadowed-variable": true,
    "no-switch-case-fall-through": true,
    "no-var-keyword": true,
    "switch-default": true,
    "triple-equals": true,
    "eofline": true,
    "indent": [true, "spaces"],
    "no-trailing-whitespace": true,
    "trailing-comma": [true, {"singleline": "never"}],
    "class-name": true,
    "no-consecutive-blank-lines": [true, 1],
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "import-spacing": true,
    "object-curly-spacing": [true, "never"],
    "ban": [
      true,
      {"name": "fdescribe", "message":"no-focused-tests"},
      {"name": "fit", "message":"no-focused-tests"},
      {"name": ["describe", "only"], "message":"no-focused-tests"},
      {"name": ["it", "only"], "message":"no-focused-tests"}
    ],
    "jsx-no-lambda": false,
    "jsx-boolean-value": [true, "never"],
    "space-in-brackets": ["error", "always"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "array-bracket-spacing": [true, "never"]
  }
}
